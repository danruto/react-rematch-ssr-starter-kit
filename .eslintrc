{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "window": true,
    "document": true,
    "describe": true,
    "test": true
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 4],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "no-unused-vars": "warn",
    "radix": ["error", "as-needed"],
    "max-len": ["error", 300, { "ignoreTemplateLiterals": true }],
    "arrow-body-style": ["warn", "as-needed"],
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "class-methods-use-this": [ "off" ],
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": [ "Label" ],
        "required": {
          "every": []
        },
        "allowChildren": false
      }
    ],
    "no-nested-ternary": "off",
    "no-bitwise": [
      "error",
      { "allow": [ "<<", ">>" ] }
    ]
  }
}
